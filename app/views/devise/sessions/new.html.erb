<div class="max-w-sm mx-auto">
  <h2>Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: "f-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "f-f" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "f-label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "f-f" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div>
      <%= f.submit "Log in", class: "btn-primary" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>

