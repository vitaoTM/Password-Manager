<div class="flex justify-between">

  <h1>Group Show</h1>

</div>

<%#= tag.div current_user.group.name, class: "text-lg text-green-600" %>

<div class="flex flex-col divide-y divide-gray-500">
  <% current_user.groups.each do |e| %>
    <div class="flex flex-row p-4 no-underline rounded hover:bg-gray-100">
      <div class="flex-auto ">
        <%= tag.p e.name %>
      </div>

      <div class="items-end py-5">
        <%= link_to "Edit", edit_group_path, class: "btn-primary  no-underline basis-64" %>
      </div>
    </div>
  <% end %>
</div>


